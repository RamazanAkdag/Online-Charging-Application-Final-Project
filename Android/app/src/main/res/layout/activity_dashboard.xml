<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <!-- Mavi Arka Plan Alanı -->
    <View
        android:id="@+id/top_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#A1D6E2"
        app:layout_constraintBottom_toBottomOf="@id/spinner_subscribers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hoş geldin -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Hoş geldin Ramazan"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hat seçimi -->
    <Spinner
        android:id="@+id/spinner_subscribers"
        android:layout_width="345dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintWidth_percent="0.85" />

    <!-- Paket Detayları Alanı (beyaz kutu) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detail_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="6dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_subscribers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Kullanım Daireleri -->
            <LinearLayout
                android:id="@+id/usage_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <include
                    layout="@layout/item_usage"
                    android:id="@+id/usage_message" />
                <include
                    layout="@layout/item_usage"
                    android:id="@+id/usage_internet" />
                <include
                    layout="@layout/item_usage"
                    android:id="@+id/usage_call" />

            </LinearLayout>

            <!-- Detay Başlık -->
            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Detayları"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Açıklama -->
            <TextView
                android:id="@+id/detail_description"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginTop="6dp"
                android:text="Aylık 20 GB internet hakkınızdan 10 GB kalmıştır."
                android:textColor="#555"
                android:textSize="18sp" />

            <!-- Büyük versiyon kullanımı -->
            <include
                layout="@layout/item_usage"
                android:id="@+id/usage_big_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
