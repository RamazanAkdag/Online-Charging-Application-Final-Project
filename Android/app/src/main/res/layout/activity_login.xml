<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".ui.login.LoginActivity">

    <!-- Background Shape (top-left decorative) -->
    <ImageView
        android:id="@+id/background"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:scaleType="fitXY"
        android:alpha="0.6"
        android:src="@drawable/bg_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Top spacing guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="120dp" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoş geldiniz !"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/top_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login Image -->
    <ImageView
        android:id="@+id/login_image"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        android:contentDescription="Login Illustration"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Phone Input -->
    <EditText
        android:id="@+id/input_phone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Telefon numarası"
        android:background="@drawable/rounded_edittext"
        android:paddingHorizontal="16dp"
        android:inputType="phone"
        android:textColorHint="#999"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/login_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/input_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Şifre"
        android:background="@drawable/rounded_edittext"
        android:paddingHorizontal="16dp"
        android:inputType="textPassword"
        android:textColorHint="#999"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/input_phone"
        app:layout_constraintStart_toStartOf="@id/input_phone"
        app:layout_constraintEnd_toEndOf="@id/input_phone" />

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifrenizi hatırlamıyor musunuz?"
        android:textColor="#49C8D9"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/input_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Giriş"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="#49C8D9"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/forgot_password"
        app:layout_constraintStart_toStartOf="@id/input_phone"
        app:layout_constraintEnd_toEndOf="@id/input_phone" />

    <!-- Register Prompt -->
    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabınız yok mu?"
        android:textColor="#555"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
